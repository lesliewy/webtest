<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:reg="http://www.dangdang.com/schema/ddframe/reg"
       xmlns:job="http://www.dangdang.com/schema/ddframe/job"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	                       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
	                        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd http://www.dangdang.com/schema/ddframe/reg http://www.dangdang.com/schema/ddframe/reg/reg.xsd http://www.dangdang.com/schema/ddframe/job http://www.dangdang.com/schema/ddframe/job/job.xsd"
       default-autowire="byName">

    <context:annotation-config/>
    <context:component-scan base-package="com.wy.myweb">
    </context:component-scan>


    <!--通知spring使用cglib而不是jdk的来生成代理方法-->
    <!--<aop:aspectj-autoproxy proxy-target-class="true"/>-->
    <!--
    <aop:aspectj-autoproxy/>
    -->

    <!-- ================================== 引入配置文件 ====================================== -->
    <context:property-placeholder location="classpath:properties/*.properties"/>
    <import resource="classpath:springmvc-resteasy.xml"/>
    <import resource="classpath:spring/aop/xmlaop.xml" />

    <!-- ================================== api bean begin ====================================== -->
    <bean id="restService" class="com.wy.myweb.impl.RestImpl"/>
    <!-- ================================== api bean end ====================================== -->

    <!-- ================================== elastic job begin ====================================== -->
    <reg:zookeeper id="jobRegisterCenter" server-lists="127.0.0.1:2181" namespace="wy-elastic-job" base-sleep-time-milliseconds="1000" max-sleep-time-milliseconds="3000" max-retries="3" />

    <job:simple id="mySimpleJob" class="cn.wy.biz.service.elasticjob.MySimpleJob" registry-center-ref="jobRegisterCenter"
                cron="0/10 * * * * ?"
                disabled="false"
                monitor-execution="true"
                failover="true"
                overwrite="true"
                sharding-total-count="1"
                sharding-item-parameters=""
                description="测试" />

    <!-- ================================== elastic job end ====================================== -->
</beans>
